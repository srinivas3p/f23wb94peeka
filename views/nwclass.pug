extends layout

block content
    h1= title
    .container-fluid
        .row
            - const results = [{ classification: 'Class ICBM', range: 500, name: 'W88', damage: 100 }, { classification: 'Class Tactical', range: 750, name: 'B61', damage: 150 }, { classification: 'Class SLBM', range: 1000, name: 'Trident II D5', damage: 200 }]
            each Nwclass in results
                .col-sm-2
                    .result-item
                        p= `Name: ${Nwclass.name}`
                        p= `Classification: ${Nwclass.classification}`
                        p= `Range: ${Nwclass.range} km`
                        p= `Damage: ${Nwclass.damage}`
        a(href="/nwclass") Back to Search
